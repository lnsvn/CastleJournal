

    <div  class="card  mx-auto col-8 mt-4 p-3"
        style=" border-radius: 30px; background: #163850; color: #ffffff">
        <div class="row    mx-auto "
            style=" align-items: center; justify-content:center; background: #163850; color: #ffffff">




            <h2 class="text-center">Tell us what you think of Castle Journal.<br> See what others think as well.
            </h2>


            <form class="card-body new-review-form row">
                <div class="col-6">

                    <input class="form-control mb-3" type="text" id="review-title" name="user-name"
                        placeholder="Your Name" />
                </div>

                <div class="col-6">

                    <input type="number" id="star_rating" name="star_rating"
                        placeholder="Rate your experience from 1 to 5 stars." class="form-control mb-3" />
                </div>
                <div>
                    
                    <textarea class="form-control mb-3" id="review" name="review" rows="5"
                        placeholder="Add your thoughts, preferences, areas of improvement"></textarea>
                </div>
                <button type="submit" OnClick="dashboard" class="btn btn-outline-light mx-auto col-4 mt-2 mb-2">Add Public
                    Feedback</button>
                {{!-- <button type="button" class="btn btn-primary mb-3" href="/" />Return</button> --}}
            </form>












        </div>
    </div>
    







    <section>
        
        {{#if reviews.length}}

        {{#each reviews as |review|}}
        {{> card review}}
        <hr>
        {{/each}}

    </section>
    {{/if}}

<script src="/js/add-review.js"></script>