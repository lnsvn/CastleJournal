    <header class=" ">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <div class="container-fluid ">
                <h1 class="navbar-brand mt-3">日本 Castle Journal</h1>
                {{#if logged_in}}
                <button class="navbar-toggler mt-1 mb-1 me-2" type="button" data-bs-toggle="collapse"
